@model R4G.App.ViewModels.CarreraDto

@{
    ViewData["Title"] = "Añadir Carrera";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card p-4 shadow-sm r4g-form-card">
            <div class="card-body">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- NOMBRE -->
                    <div class="mb-3">
                        <label class="form-label">Nombre de la carrera</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej. 10K Zaragoza" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <!-- FECHA -->
                    <div class="mb-3">
                        <label class="form-label">Fecha</label>
                        <input asp-for="Fecha" class="form-control" type="date" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>

                    <!-- CIUDAD -->
                    <div class="mb-3">
                        <label class="form-label">Ciudad</label>
                        <input asp-for="Ciudad" class="form-control" placeholder="Zaragoza" />
                    </div>

                    <!-- DISTANCIA -->
                    <div class="mb-3">
                        <label class="form-label">Distancia (km)</label>
                        <input asp-for="DistanciaKm" class="form-control" placeholder="10" />
                        <span asp-validation-for="DistanciaKm" class="text-danger"></span>
                    </div>

                    <!-- DURACIÓN -->
                    <div class="mb-3">
                        <label class="form-label">Tiempo final (HH:MM:SS)</label>
                        <div class="d-flex gap-2">
                            <input asp-for="TiempoHoras" class="form-control" placeholder="HH" />
                            <input asp-for="TiempoMinutos" class="form-control" placeholder="MM" />
                            <input asp-for="TiempoSegundos" class="form-control" placeholder="SS" />
                        </div>
                        <span asp-validation-for="TiempoHoras" class="text-danger"></span>
                        <span asp-validation-for="TiempoMinutos" class="text-danger"></span>
                        <span asp-validation-for="TiempoSegundos" class="text-danger"></span>
                    </div>

                    <!-- POSICIONES -->
                    <div class="mb-3">
                        <label class="form-label">Posición General</label>
                        <input asp-for="PosicionGeneral" class="form-control" placeholder="Ej. 345" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Posición Categoría</label>
                        <input asp-for="PosicionCategoria" class="form-control" placeholder="Ej. 42" />
                    </div>

                    <!-- COMENTARIOS -->
                    <div class="mb-3">
                        <label class="form-label">Comentarios</label>
                        <textarea asp-for="Comentarios" class="form-control" rows="3" placeholder="Sensaciones, clima, ritmo..."></textarea>
                    </div>

                    <!-- BOTONES -->
                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Index" class="btn btn-secondary">⬅ Volver</a>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

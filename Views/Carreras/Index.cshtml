@model IEnumerable<R4G.App.ViewModels.CarreraDto>

@{
    ViewData["Title"] = "Carreras";
}

@section Styles {
    <link rel="stylesheet" href="~/css/carreras.css" asp-append-version="true" />
}

<div class="container">
<h1 class="page-title">Carreras</h1>

<a class="btn btn-success mb-4" asp-action="Create">
    âž• AÃ±adir Carrera
</a>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

@foreach (var c in Model)
{
    <div class="col">
        <div class="card shadow-sm carrera-card">
            <div class="card-body">

                <h4 class="fw-bold">@c.Nombre</h4>

                <p class="text-muted mb-2">
                    ðŸ“… @c.Fecha.ToString("dd/MM/yyyy")
                </p>

                <p class="mb-1"><strong>Distancia:</strong> @c.DistanciaKm km</p>

                <p class="mb-1">
                    <strong>Tiempo:</strong>
                    @c.DuracionFormateada
                </p>

                <p class="mb-1">
                    <strong>Ritmo:</strong> @c.RitmoMedio
                </p>

                <p class="mb-2">
                    <strong>Velocidad:</strong> @c.VelocidadMedia.ToString("0.0") km/h
                </p>

                @if (!string.IsNullOrWhiteSpace(c.Comentarios))
                {
                    <p class="mt-2 text-muted"><em>"@c.Comentarios"</em></p>
                }

                <hr />

                <div class="d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-info btn-sm text-white">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </div>

            </div>
        </div>
    </div>
}
</div>
</div>

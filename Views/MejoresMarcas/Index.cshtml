@model R4G.App.ViewModels.MejorMarcaViewModel

@{
    ViewData["Title"] = "Mejores Marcas";
    string Show(string? v) => string.IsNullOrWhiteSpace(v) || v.Trim() == "-" ? "— · — · —" : v!;
}

@section Styles {
    <link rel="stylesheet" href="~/css/mejoresMarcas.css" asp-append-version="true" />
}

<section class="container my-5 mejores-marcas">
<h1 class="page-title">Mejores Marcas</h1>

    <div class="row text-center">

        <div class="col-md-4 mb-4">
            <div class="stat-box shadow-sm marca-card">
                <div class="dist-box">1K</div>
                <div class="time-box">@Show(Model.Mejor1K)</div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="stat-box shadow-sm marca-card">
                <div class="dist-box">5K</div>
                <div class="time-box">@Show(Model.Mejor5K)</div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="stat-box shadow-sm marca-card">
                <div class="dist-box">10K</div>
                <div class="time-box">@Show(Model.Mejor10K)</div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="stat-box shadow-sm marca-card">
                <div class="dist-box">Media Maratón</div>
                <div class="time-box">@Show(Model.MejorMedia)</div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="stat-box shadow-sm marca-card">
                <div class="dist-box">Maratón</div>
                <div class="time-box">@Show(Model.MejorMaraton)</div>
            </div>
        </div>
    </div>
</section>

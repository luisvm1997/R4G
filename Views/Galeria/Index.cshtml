@using System.IO
@using System.Text.Json
@model List<string>

@{
    ViewData["Title"] = "Galería";
    string[] videoExt = new[] { ".mp4", ".mov", ".webm" };
    var galleryItems = Model.Select(f => new
    {
        file = f,
        ext = System.IO.Path.GetExtension(f)?.ToLowerInvariant() ?? string.Empty
    }).ToList();
    var itemsJson = JsonSerializer.Serialize(galleryItems);
    bool canManage = ViewBag.CanManage is bool b && b;
}

<section class="container my-4">
    <h1 class="page-title">Galería</h1>

    @if (TempData["GaleriaMsg"] is string msg)
    {
        <div class="alert alert-info">@msg</div>
    }

    @if (canManage)
    {
        <form asp-action="Subir" method="post" enctype="multipart/form-data" class="mb-4">
            <div class="input-group">
                <input type="file" name="archivo" accept=".jpg,.jpeg,.png,.gif,.webp,.mp4,.mov,.webm" class="form-control" required />
                <button class="btn btn-primary" type="submit">Subir</button>
            </div>
            <small class="text-muted">Formatos: jpg, png, gif, webp, mp4, mov, webm</small>
        </form>
    }

    <div class="row g-3">
        @for (var i = 0; i < galleryItems.Count; i++)
        {
            var it = galleryItems[i];
            var isVideo = Array.IndexOf(videoExt, it.ext) >= 0;
            <div class="col-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm gal-card" data-index="@i">
                    @if (isVideo)
                    {
                        <div class="ratio ratio-16x9">
                            <video muted class="w-100 h-100" style="object-fit: cover;">
                                <source src="~/uploads/@it.file" type="video/@it.ext.TrimStart('.')">
                            </video>
                        </div>
                    }
                    else
                    {
                        <img src="~/uploads/@it.file" class="card-img-top" alt="@it.file" style="object-fit: cover; height: 180px;">
                    }
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <p class="card-text text-truncate mb-0">@it.file</p>
                        @if (canManage)
                        {
                            <form asp-action="Eliminar" method="post" class="ms-2">
                                <input type="hidden" name="archivo" value="@it.file" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Eliminar</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="modal fade" id="galleryModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div id="galleryMedia"></div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-secondary" id="galleryPrev">Anterior</button>
                    <button type="button" class="btn btn-secondary" id="galleryNext">Siguiente</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const galleryItems = @Html.Raw(itemsJson);
        const videoExt = [".mp4", ".mov", ".webm"];
        let currentIndex = 0;
        const mediaContainer = document.getElementById("galleryMedia");
        const modal = new bootstrap.Modal(document.getElementById("galleryModal"));

        function renderMedia(idx) {
            const item = galleryItems[idx];
            const isVideo = videoExt.includes(item.ext);
            if (isVideo) {
                mediaContainer.innerHTML = `<video controls style="width:100%; max-height:80vh;"><source src="/uploads/${item.file}" type="video/${item.ext.replace('.', '')}">Tu navegador no soporta video.</video>`;
            } else {
                mediaContainer.innerHTML = `<img src="/uploads/${item.file}" alt="${item.file}" style="width:100%; max-height:80vh; object-fit: contain;">`;
            }
        }

        document.querySelectorAll(".gal-card").forEach(el => {
            el.addEventListener("click", e => {
                currentIndex = parseInt(el.dataset.index, 10) || 0;
                renderMedia(currentIndex);
                modal.show();
            });
        });

        document.getElementById("galleryPrev").addEventListener("click", () => {
            currentIndex = (currentIndex - 1 + galleryItems.length) % galleryItems.length;
            renderMedia(currentIndex);
        });
        document.getElementById("galleryNext").addEventListener("click", () => {
            currentIndex = (currentIndex + 1) % galleryItems.length;
            renderMedia(currentIndex);
        });
    </script>
}

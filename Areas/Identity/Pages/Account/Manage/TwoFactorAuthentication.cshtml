@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Autenticación en dos pasos (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
    @if (consentFeature?.CanTrack ?? true)
    {
        @if (Model.Is2faEnabled)
        {
            if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger">
                    <strong>No te quedan códigos de recuperación.</strong>
                    <p>Debes <a asp-page="./GenerateRecoveryCodes">generar nuevos códigos de recuperación</a> antes de poder usarlos.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-danger">
                    <strong>Te queda 1 código de recuperación.</strong>
                    <p>Puedes <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto de códigos</a>.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning">
                    <strong>Te quedan @Model.RecoveryCodesLeft códigos de recuperación.</strong>
                    <p>Deberías <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto de códigos</a>.</p>
                </div>
            }

            if (Model.IsMachineRemembered)
            {
                <form method="post" style="display: inline-block">
                    <button type="submit" class="btn btn-primary">Olvidar este navegador</button>
                </form>
            }
            <a asp-page="./Disable2fa" class="btn btn-primary">Desactivar 2FA</a>
            <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary">Regenerar códigos de recuperación</a>
        }

        <h4>App de autenticación</h4>
        @if (!Model.HasAuthenticator)
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Añadir app de autenticación</a>
        }
        else
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Configurar app de autenticación</a>
            <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-primary">Restablecer app de autenticación</a>
        }
    }
    else
    {
        <div class="alert alert-danger">
            <strong>Aún no has aceptado la política de privacidad y cookies.</strong>
            <p>Debes aceptar la política antes de activar la autenticación en dos pasos.</p>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

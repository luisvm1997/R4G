@page
@model Disable2faModel
@{
    ViewData["Title"] = "Desactivar la autenticación en dos pasos (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Esta acción solo desactiva el 2FA.</strong>
    </p>
    <p>
        Desactivar el 2FA no cambia las claves usadas en las apps de autenticación. Si quieres cambiar la clave, <a asp-page="./ResetAuthenticator">restablece tus claves de autenticador</a>.
    </p>
</div>

<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">Desactivar 2FA</button>
    </form>
</div>

@page
@model RegisterModel
@{
    ViewData["Title"] = "Crear cuenta";
    ViewData["BodyClass"] = "welcome-page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="auth-viewport">
    <div class="auth-card">

        <h2 class="text-center">Crea tu cuenta</h2>
        <p class="text-center text-muted mb-4">Empieza a registrar tus entrenamientos y marcas.</p>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Contraseña</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="password-rules mb-3">
                <h6 class="mb-2">Requisitos de la contraseña</h6>
                <ul class="password-rules-list">
                    <li class="rule" data-rule="length">Mínimo 8 caracteres</li>
                    <li class="rule" data-rule="digit">Al menos un número</li>
                    <li class="rule" data-rule="upper">Al menos una mayúscula</li>
                </ul>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">
                Crear cuenta
            </button>
        </form>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <hr class="my-4" />
            <div class="auth-footer text-center">
                <p class="fw-semibold mb-3">O regístrate con:</p>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-primary me-2 mb-2" name="provider" value="@provider.Name" title="Inicia sesión con tu cuenta de @provider.DisplayName">
                            @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }

        <div class="auth-footer text-center mt-3">
            <p class="mb-0">¿Ya tienes cuenta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Inicia sesión</a></p>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            const pwd = document.getElementById('Input_Password');
            if (!pwd) return;

            const rules = {
                length: { el: document.querySelector('[data-rule="length"]'), test: v => v.length >= 8 },
                digit: { el: document.querySelector('[data-rule="digit"]'), test: v => /\d/.test(v) },
                upper: { el: document.querySelector('[data-rule="upper"]'), test: v => /[A-Z]/.test(v) }
            };

            const refresh = () => {
                const value = pwd.value || '';
                Object.values(rules).forEach(rule => {
                    if (!rule.el) return;
                    const ok = rule.test(value);
                    rule.el.classList.toggle('ok', ok);
                });
            };

            pwd.addEventListener('input', refresh);
            refresh();
        })();
    </script>
}

@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
    ViewData["BodyClass"] = "welcome-page";   
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="auth-viewport">
    <div class="auth-card">

        <h2 class="text-center">Inicia sesión para continuar 🏃‍♂️</h2>

        <form id="account" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Contraseña</label>
                <span class="text-danger" asp-validation-for="Input.Password"></span>
            </div>

            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                Iniciar sesión
            </button>

            <hr class="my-4" />

            <div class="auth-footer text-center">
                <p class="mb-2"><a asp-page="./ForgotPassword">¿Has olvidado tu contraseña?</a></p>
                <p class="mb-0"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear una cuenta nueva</a></p>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
